.wrapper {
  display: inline-flex;
  flex-direction: column;
  width: 240rpx;
  height: 360rpx;
  border-radius: 8rpx;
  border: 1rpx solid rgba(153, 153, 153, 0.28);
}

.book-image {
  height: 222rpx;
  width: 100%;
}

.book-content {
  box-sizing: border-box;
  padding: 22rpx;
  width: 240rpx;
  height: 138rpx;
  border-radius: 8rpx;
}

.book-title {
  font-size: 24rpx;
  font-family: PingFang;
  font-weight: 400;
  color: rgba(31, 31, 31, 1);
  line-height: 28rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.book-author {
  margin-top: 8rpx;
  font-size: 20rpx;
  font-family: PingFang;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 28rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.book-info {
  margin-top: 2rpx;
  margin-bottom: 10rpx;
}

.book-like {
  text-align: right;
  font-size: 20rpx;
  font-family: PingFang;
  font-weight: 400;
  color: rgba(187, 187, 187, 1);
  line-height: 28rpx;
}