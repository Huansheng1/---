/* pages/books/index.wxss */
.wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.search-cpn {
  padding: 20rpx 30rpx;
  border: 1px solid rgba(249, 249, 249, 1);
}

.content {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  flex: 1;
  background: rgba(249, 249, 249, 1);
}

.books-title {
  margin-top: 38rpx;
  padding-bottom: 30rpx;
  width: 100%;
  height: 32rpx;
  font-size: 34rpx;
  font-family: PingFang;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
  line-height: 40rpx;
  text-align: center;
}
.books{
  display: flex;
  margin-top: 26rpx;
  flex-wrap: wrap;
  align-content: center;
}
.books-item{
  margin-bottom: 60rpx;
  margin-left: 90rpx;
  border: 1px solid rgba(208, 208, 208,0.1);
  box-shadow:1px 2px 10px 0px rgba(203,203,203,0.1);
}